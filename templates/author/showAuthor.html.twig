{% extends 'base.html.twig' %}

{% block title %}Détails Auteur{% endblock %}

{% block body %}
    {% if author is not null %}
        <h2>{{ author.username }}</h2>
        <img src="{{ author.picture }}" alt="{{ author.username }}" width="150">
        <p><strong>Email :</strong> {{ author.email }}</p>
        <p><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>
        <a href="{{ path('app_list_authors') }}">← Retour à la liste</a>
    {% else %}
        <p>Auteur introuvable.</p>
    {% endif %}
{% endblock %}
