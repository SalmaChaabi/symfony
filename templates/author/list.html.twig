{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <h1>Liste des auteurs</h1>

    {% if authors is not defined or authors is empty %}
        <p>Aucun auteur trouvé.</p>
    {% else %}
        <p>Nombre total d'auteurs : {{ authors|length }}</p>
        
        {# Calcul du nombre total de livres #}
        {% set totalBooks = 0 %}
        {% for author in authors %}
            {% set totalBooks = totalBooks + author.nb_books %}
        {% endfor %}
        <p>Nombre total de livres : {{ totalBooks }}</p>

        <table border="1" cellpadding="8" cellspacing="0">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Nombre de livres</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for author in authors %}
                    <tr>
                        <td><img src="{{ author.picture }}" alt="{{ author.username }}" width="100"></td>
                        <td>{{ author.username | upper }}</td>
                        <td>{{ author.email }}</td>
                        <td>{{ author.nb_books }}</td>
                        <td>
                            <a href="{{ path('app_author_details', {'id': author.id}) }}">Détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
